{
    "version": 2,
    "builds": [
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "dist",
          "buildCommand": "cd frontend && npm install && npm run build"
        }
      },
      {
        "src": "backend/index.js",
        "use": "@vercel/node",
        "config": {
          "includeFiles": ["backend/**"]
        }
      }
    ],
    "env": {
      "NODE_ENV": "production"
    }
  }