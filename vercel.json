{
    "version": 2,
    "builds": [
      {
        "src": "backend/index.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/backend/index.js"
      },
      {
        "src": "/(.*\\.(js|css|ico|png|jpg|svg|json))",
        "dest": "/backend/index.js"
      },
      {
        "src": "/(.*)",
        "dest": "/backend/index.js",
        "headers": {
          "cache-control": "s-maxage=1, stale-while-revalidate"
        }
      }
    ]
  }